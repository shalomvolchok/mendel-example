
outdir: ./build
bundlesoutdir: client
serveroutdir: server

base: base
basetree: app/src/base
bundles:
  vendor:
    require:
      - react
      - react-dom
      - prop-types
  main:
    entries:
      - ./app/src/base/App.js
    external:
      - react
      - react-dom
      - prop-types
    transform:
      - babelify
  lazy:
    require:
      - ./app/src/base/containers/Search.js
    external:
      - react
      - react-dom
      - prop-types
    transform:
      - babelify

manifestProcessors:
  -
    - mendel-manifest-extract-bundles
    - external: lazy
      from: main

variationsdir: app/src/variations
variations:

env:
  production:
    manifestProcessors:
      -
        - mendel-manifest-extract-bundles
        - external: lazy
          from: main
      -
        - mendel-manifest-uglify
    bundles:
      vendor:
        transform:
          - babelify
          -
            - envify
            - global: true
              NODE_ENV: production
      main:
        transform:
          - babelify
          -
            - envify
            - global: true
              NODE_ENV: production
      lazy:
        transform:
          - babelify
          -
            - envify
            - global: true
              NODE_ENV: production
